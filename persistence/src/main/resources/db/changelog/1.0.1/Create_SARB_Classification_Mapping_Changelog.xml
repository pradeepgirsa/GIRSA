<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="sarb_classification_mapping_table_1" author="Sharanya">
        <createTable tableName="sarb_classification_mapping" >
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sarb_classification" type="varchar(25)"/>
            <column name="asset_class" type="varchar(55)"/>
        </createTable>

        <addAutoIncrement columnDataType="bigint"
                          columnName="id"
                          incrementBy="1"
                          startWith="100"
                          tableName="sarb_classification_mapping"/>
    </changeSet>

</databaseChangeLog>