<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="derivative_types_table_1" author="Sharanya" runOnChange="true">
        <createTable tableName="derivative_types" >
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type_of_derivative" type="varchar(100)"/>
            <column name="local_classification" type="varchar(50)"/>
            <column name="foreign_classification" type="varchar(50)"/>
        </createTable>

        <addAutoIncrement columnDataType="bigint"
                          columnName="id"
                          incrementBy="1"
                          startWith="100"
                          tableName="derivative_types"/>
    </changeSet>

</databaseChangeLog>